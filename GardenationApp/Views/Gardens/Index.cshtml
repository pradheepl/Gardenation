@model IEnumerable<GardenationApp.Models.Garden>

@{
    ViewBag.Title = "Index";
}

<h2>
    @Html.ActionLink("Create New Garden", "Create", null, new { @class = "btn btn-default" })
</h2>

<div class="row">
    @*For each garden in the gardens model, show the name as a link to details with a list of information underneath*@
        @foreach (var item in Model)
        {
            <div class=" col-xs-12 col-md-6">
                <a href="~/Gardens/Details/@Html.DisplayFor(modelItem => item.GardenID)"><h2>@Html.DisplayFor(modelItem => item.Name)</h2></a>
                <ul class="garden-list">
                    <li>Size: @Html.DisplayFor(modelItem => item.SqFeet)Sq/ft</li>
                    <li>Created: @Html.DisplayFor(modelItem => item.CreatedDate)</li>
                    <li>Last Visit: @Html.DisplayFor(modelItem => item.LastVisitedDate)</li>
                    <li>City: @Html.DisplayFor(modelItem => item.City.Name)</li>
                    <li>
                    @Html.ActionLink("Delete", "Delete", new { id = item.GardenID }, new { @class = "btn btn-default" })
                    </li>
                </ul>
            </div>
        }
</div>

